	<authorUrl>www.indrasoft.com</authorUrl>
	<version>3.0.0</version>
	<description>PLG_USER_ORGANIZATION_XML_DESCRIPTION</description>
 
	<files>
		<filename plugin="organization">organization.php</filename>
		<filename>index.html</filename>
		<folder>profiles</folder>
	</files>
 
	<languages>
		<language tag="en-US">en-US.plg_user_organization.ini</language>
		<language tag="en-US">en-US.plg_user_organization.sys.ini</language>
		<language tag="en-GB">en-GB.plg_user_organization.ini</language>
		<language tag="en-GB">en-GB.plg_user_organization.sys.ini</language>
	</languages>
 
	<config>
		<fields name="params">
 
			<fieldset name="basic">
				<field name="register-require-user" type="note"
					label="PLG_USER_ORGANIZATION_FIELD_NAME_REGISTER_REQUIRE_USER"
				/>
 
				<field name="register-require_gov_affil" type="list"
					description="PLG_USER_ORGANIZATION_FIELD_GOV_AFFIL_DESC"
					label="PLG_USER_ORGANIZATION_FIELD_GOV_AFFIL_LABEL"
				>
					<option value="2">JOPTION_REQUIRED</option>
					<option value="1">JOPTION_OPTIONAL</option>
					<option value="0">JDISABLED</option>
				</field>
 
				<field name="register-require_org" type="list"
					description="PLG_USER_ORGANIZATION_FIELD_ORG_DESC"
					label="PLG_USER_ORGANIZATION_FIELD_ORG_LABEL"
				>
					<option value="2">JOPTION_REQUIRED</option>
					<option value="1">JOPTION_OPTIONAL</option>
					<option value="0">JDISABLED</option>
				</field>
                
			</fieldset>
 
		</fields>
	</config>
 </extension>